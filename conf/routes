# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /api/count                              controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /api/message                            controllers.AsyncController.message

GET     /api/tasks                              controllers.TodoTaskController.getTodoTaskList
PUT     /api/tasks/complete/:taskID             controllers.TodoTaskController.completeTask(taskID: String)
PUT     /api/tasks/uncomplete/:taskID           controllers.TodoTaskController.uncompleteTask(taskID: String)
POST    /api/tasks/create                       controllers.TodoTaskController.createTask
DELETE  /api/tasks/:taskID                      controllers.TodoTaskController.deleteTask(taskID: String)

# Map static resources from the /public folder to the /assets URL path
GET     /api/assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)